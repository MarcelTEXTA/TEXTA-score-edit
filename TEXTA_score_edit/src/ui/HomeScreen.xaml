<UserControl x:Class="TEXTA_score_edit.src.ui.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TEXTA_score_edit.src.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="200" Background="#EEE" >
            <ListBox x:Name="NavigationListBox" SelectionChanged="NavigationListBox_SelectionChanged">
                <ListBoxItem Content="Partitions" IsSelected="True"/>
                <ListBoxItem Content="Partagés"/>
                <ListBoxItem Content="Partitions locales"/>
                <ListBoxItem Content="Bibliothèque"/>
            </ListBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="10">
            <ContentControl x:Name="MainContent"/>
        </StackPanel>
    </StackPanel>
</UserControl>
